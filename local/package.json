{
	"name": "remote-android-companion",
	"publisher": "nisargjhaveri",
	"displayName": "Remote Android Companion",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:remote-android"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"icon": "$(device-mobile)",
					"id": "remote-android-container",
					"title": "Remote Android"
				}
			]
		},
		"views": {
			"remote-android-container": [
				{
					"id": "remote-android",
					"name": "Remote Android",
					"icon": "$(device-mobile)"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "remote-android",
				"contents": "Welcome to Remote Android Debugging. Your connected devices will show up here."
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "remote-android.addTcpDevice",
					"group": "navigation",
					"when": "view == remote-android"
				}
			],
			"view/item/context": [
				{
					"command": "remote-android.removeTcpDevice",
					"when": "viewItem =~ /;removable;/",
					"group": "inline@1"
				},
				{
					"command": "remote-android.connectDevice",
					"when": "viewItem =~ /;disconnected;/",
					"group": "inline@2"
				},
				{
					"command": "remote-android.disconnectDevice",
					"when": "viewItem =~ /;connected;/",
					"group": "inline@2"
				},
				{
					"command": "remote-android.removeTcpDevice",
					"when": "viewItem =~ /;removable;/"
				},
				{
					"command": "remote-android.connectDevice",
					"when": "viewItem =~ /;disconnected;/"
				},
				{
					"command": "remote-android.disconnectDevice",
					"when": "viewItem =~ /;connected;/"
				}
			]
		},
		"commands": [
			{
				"command": "remote-android.connectDevice",
				"title": "Connect to Remote",
				"shortTitle": "Connect",
				"icon": "$(plug)",
				"enablement": "view == remote-android"
			},
			{
				"command": "remote-android.disconnectDevice",
				"title": "Disconnect from Remote",
				"shortTitle": "Disconnect",
				"icon": "$(debug-disconnect)",
				"enablement": "view == remote-android"
			},
			{
				"command": "remote-android.addTcpDevice",
				"title": "Add TCP Device",
				"icon": "$(plus)",
				"category": "Remote Android"
			},
			{
				"command": "remote-android.removeTcpDevice",
				"title": "Remove device",
				"icon": "$(trash)",
				"enablement": "view == remote-android"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.74.0",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"@vscode/test-electron": "^2.1.5",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"ts-loader": "^9.3.1",
		"typescript": "^4.7.4",
		"webpack": "^5.73.0",
		"webpack-cli": "^4.10.0",
		"webpack-node-externals": "^3.0.0"
	},
	"dependencies": {
		"remote-adb": "^2.3.0"
	}
}
