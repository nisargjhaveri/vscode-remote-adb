{
	"name": "remote-adb",
	"publisher": "nisargjhaveri",
	"displayName": "Remote Android Debugging",
	"description": "Connect local Android devices to remote machine for debugging",
	"repository": "https://github.com/nisargjhaveri/vscode-remote-adb",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"remote",
		"remote development",
		"adb",
		"android",
		"debugging"
	],
	"activationEvents": [
		"onView:remote-adb"
	],
	"main": "./dist/extension.js",
	"extensionKind": [
		"ui"
	],
	"contributes": {
		"views": {
			"debug": [
				{
					"id": "remote-adb",
					"name": "Remote Android",
					"icon": "$(device-mobile)",
					"when": "remoteName"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "remote-adb",
				"contents": "No locally connected Android devices or emulator found."
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "remote-adb.addTcpDevice",
					"group": "navigation",
					"when": "view == remote-adb"
				}
			],
			"view/item/context": [
				{
					"command": "remote-adb.copyRemoteSerial",
					"when": "viewItem =~ /;connected;/",
					"group": "inline@1"
				},
				{
					"command": "remote-adb.connectDevice",
					"when": "viewItem =~ /;disconnected;/",
					"group": "inline@2"
				},
				{
					"command": "remote-adb.disconnectDevice",
					"when": "viewItem =~ /;connected;/",
					"group": "inline@2"
				},
				{
					"command": "remote-adb.connectDevice",
					"when": "viewItem =~ /;disconnected;/",
					"group": "navigation@1"
				},
				{
					"command": "remote-adb.disconnectDevice",
					"when": "viewItem =~ /;connected;/",
					"group": "navigation@1"
				},
				{
					"command": "remote-adb.removeTcpDevice",
					"when": "viewItem =~ /;removable;/",
					"group": "navigation@2"
				},
				{
					"command": "remote-adb.copyRemoteSerial",
					"when": "viewItem =~ /;connected;/",
					"group": "1_copy"
				}
			]
		},
		"commands": [
			{
				"command": "remote-adb.connectDevice",
				"title": "Connect to Remote",
				"shortTitle": "Connect",
				"icon": "$(plug)",
				"enablement": "view == remote-adb"
			},
			{
				"command": "remote-adb.disconnectDevice",
				"title": "Disconnect from Remote",
				"shortTitle": "Disconnect",
				"icon": "$(debug-disconnect)",
				"enablement": "view == remote-adb"
			},
			{
				"command": "remote-adb.copyRemoteSerial",
				"title": "Copy remote serial",
				"icon": "$(copy)",
				"enablement": "view == remote-adb"
			},
			{
				"command": "remote-adb.addTcpDevice",
				"title": "Add TCP device",
				"icon": "$(plus)",
				"category": "Remote Android"
			},
			{
				"command": "remote-adb.removeTcpDevice",
				"title": "Remove device",
				"icon": "$(trash)",
				"enablement": "view == remote-adb"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && node esbuild.js",
		"check-types": "tsc --noEmit",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.74.0",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"@vscode/test-electron": "^2.1.5",
		"esbuild": "^0.23.1",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"npm-run-all": "^4.1.5",
		"remote-adb": "^3.1.0",
		"typescript": "^5.5.4"
	},
	"dependencies": {
		"usb": "^2.7.0"
	}
}
